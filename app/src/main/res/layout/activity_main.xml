<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ebebef"
        tools:context=".MainActivity">
    <RelativeLayout
            android:layout_width="match_parent"
                    android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerVertical="true"
                           android:layout_centerHorizontal="true"
                           android:src="@mipmap/icon"
                />
            </RelativeLayout>
            <TextView android:layout_width="wrap_content"
                      android:text="1.给BB打字机开启悬浮窗、通知栏权限"
                      android:textSize="20dp"
                      android:textColor="#e029d2"
                      android:layout_centerVertical="true"
                      android:layout_centerHorizontal="true"
                      android:layout_height="wrap_content"/>
            <Button
                    android:layout_width="match_parent"
                    android:text="点击跳转应用权限设置"
                    android:textColor="#e029d2"
                    android:id="@+id/proBtn"
                    android:layout_height="40dp"/>
            <LinearLayout android:layout_width="match_parent"
                          android:orientation="horizontal"
                          android:layout_height="40dp">
                <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/startGdq"
                        android:text="点击开启跟打悬浮窗"
                        android:textColor="#e029d2"
                        android:layout_height="40dp"/>
                <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:id="@+id/closeGdq"
                        android:textColor="#e029d2"
                        android:text="点击关闭跟打悬浮窗"
                        android:layout_height="40dp"/>
            </LinearLayout>
            <TextView android:layout_width="wrap_content"
                      android:text="2.给BB打字机开启无障碍模式"
                      android:textColor="#e029d2"
                      android:textSize="20dp"
                      android:layout_centerVertical="true"
                      android:layout_centerHorizontal="true"
                      android:layout_height="wrap_content"/>
            <Button
                    android:layout_width="match_parent"
                    android:text="点击跳转无障碍模式设置"
                    android:textColor="#e029d2"
                    android:id="@+id/wzaBtn"
                    android:layout_height="40dp"/>
            <Button
                    android:layout_width="match_parent"
                    android:text="开启无障碍"
                    android:textColor="#e029d2"
                    android:id="@+id/access"
                    android:layout_height="40dp"/>

            <!--<Button-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:text="开启跟打器"-->
                    <!--android:id="@+id/startBtn"-->
                    <!--android:layout_height="40dp"/>-->
            <Button
                    android:layout_width="match_parent"
                    android:text="交流群:832298549"
                    android:id="@+id/qunBtn"
                    android:textColor="#e029d2"
                    android:layout_height="40dp"/>
        </LinearLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>